@model WhatsCookinGroupCapstone.Models.RecipeEdits

@{
    ViewData["Title"] = "SubmitEdit";
}

<h1 style="font-family: 'Cookie', cursive; font-weight: 600; font-size: 50px;">Add A Suggestion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecipeEditsId" />

            <input type="hidden" asp-for="RecipeID" />

            <input type="hidden" asp-for="CookId" />
                         
            <div class="form-group">
                <label asp-for="SuggestedEdit" class="control-label"></label>
                <input asp-for="SuggestedEdit" class="form-control" />
                <span asp-validation-for="SuggestedEdit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AddEdit">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
