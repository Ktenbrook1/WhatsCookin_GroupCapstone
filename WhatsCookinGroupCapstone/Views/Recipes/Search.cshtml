@model IEnumerable<WhatsCookinGroupCapstone.Models.Recipe>

@{
    ViewData["Title"] = "Search";
}

<h1 style="font-family: 'Cookie', cursive; font-weight: 600; font-size: 50px;">Search</h1>

<form asp-controller="Recipes" asp-action="Search" method="get">

    <p>
        <div class="form-inline">
            <input class="form-control mr-sm-2" type="text" style=" width: 50%;" name="SearchString">
            <input class="btn btn-primary my-sm-0" style=" font-family: 'Cookie' , cursive; color: white; font-size: 20px;" type="submit" value="Search" />
        </div>
    </p>
</form>

<table class="table container">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <!--<th>-->
            @* @Html.DisplayNameFor(model => model.IMGUrl)*@
            <!--</th>-->
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Steps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cook.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="container">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RecipeId" style="font-family: 'Cookie'; font-size: 20px; color: rgb(13,10,77)">
                        @Html.DisplayFor(modelItem => item.RecipeName)
                    </a>
                </td>
                <!--<td>-->
                @*@Html.DisplayFor(modelItem => item.IMGUrl)*@
                <!--</td>-->
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Steps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CookName)
                </td>
                <td>
                    <a asp-action="SeeReviews" asp-route-id="@item.RecipeId">See All Reviews</a> |
                    <a asp-action="Review" asp-route-id="@item.RecipeId">Add a Review!</a> |
                    <a asp-action="Details" asp-route-id="@item.RecipeId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
