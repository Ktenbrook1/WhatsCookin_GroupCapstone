@model IEnumerable<WhatsCookinGroupCapstone.Models.Reviews>

@{
    ViewData["Title"] = "SeeReviews";
}

<h1>All Reviews</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewForRecipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewForRecipe)
            </td>        
        </tr>
}
    </tbody>
</table>
