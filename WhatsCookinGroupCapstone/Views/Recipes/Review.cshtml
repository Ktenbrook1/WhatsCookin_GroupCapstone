@model WhatsCookinGroupCapstone.Models.Reviews

@{
    ViewData["Title"] = "Review";
}

<h1>Review</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Review">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewForRecipe" class="control-label"></label>
                <input asp-for="ReviewForRecipe" class="form-control" />
                <span asp-validation-for="ReviewForRecipe" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Validation" />
            <input type="hidden" asp-for="RecipeID" />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
