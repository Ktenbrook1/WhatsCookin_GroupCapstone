@model WhatsCookinGroupCapstone.Models.Reviews

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family: 'Cookie', cursive; font-weight: 600; font-size: 50px;">Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewId" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewForRecipe" class="control-label"></label>
                <input asp-for="ReviewForRecipe" class="form-control" />
                <span asp-validation-for="ReviewForRecipe" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Validation" /> @Html.DisplayNameFor(model => model.Validation)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RecipeID" class="control-label"></label>
                <input asp-for="RecipeID" class="form-control" />
                <span asp-validation-for="RecipeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CookId" class="control-label"></label>
                <input asp-for="CookId" class="form-control" />
                <span asp-validation-for="CookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
