        <script>

        const indexItems = document.querySelectorAll('.recipe-items-wrapper')
        //childNodes accesses a collection of nested divs inside the recipe-item-wrapper.  This is accessed through the variable
        //indexItems.  The event listener checks for the mouseover, and then runs a function.
        indexItems.forEach(indexItem => {
            indexItem.addEventListener('mouseover', () => {
                indexItem.childNodes[1].classList.add('img-darken');
               

            })
           
            indexItem.addEventListener('mouseout', () => {
                indexItem.childNodes[1].classList.remove('img-darken');
            })
           


        })
        </script>
       
